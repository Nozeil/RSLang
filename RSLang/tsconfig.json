{
    "compilerOptions": {
      "target": "es2017",
      "lib": [
        "ES2021",
        "DOM",
      ], 
      "module": "esnext",
      "moduleResolution": "node",
      "allowJs": true,
      "sourceMap": true,
      "outDir": "./dist/",
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "noImplicitAny": true,
      "skipLibCheck": true
    }
}